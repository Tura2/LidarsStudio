<resources>

    <!-- 🔘 Primary Button -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">#997E7B</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/heebo_bold</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <!-- ⚪ Secondary Button -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="strokeColor">#997E7B</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">#997E7B</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/heebo_bold</item>
    </style>

    <!-- 🅰️ Title (Welcome to) -->
    <style name="TitleText">
        <item name="android:fontFamily">@font/heebo_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#191A1A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.011</item>
    </style>

    <!-- 🅱️ Subtitle Title (Lidar's Studio) -->
    <style name="SubTitleText">
        <item name="android:fontFamily">@font/heebo_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#191A1A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.011</item>
    </style>

    <!-- 📝 Description Paragraph -->
    <style name="SubtitleText">
        <item name="android:fontFamily">@font/heebo_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

</resources>
