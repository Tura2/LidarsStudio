<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- ðŸ”¹ Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- â˜° Hamburger -->
            <ImageButton
                android:id="@+id/buttonHamburger"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu"
                android:contentDescription="Open Menu"
                android:scaleType="centerInside"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- About title centered -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TitleText"
                android:textSize="24dp"

                android:text="About"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Circular Image -->
            <FrameLayout
                android:id="@+id/frameImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/textTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/imageLidar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/lidar_circle_photo"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true" />
            </FrameLayout>

            <!-- Bio Heading -->
            <TextView
                android:id="@+id/titleAboutLidar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                style="@style/TitleText"
                android:text="Hi, Iâ€™m Lidar ðŸ‘‹"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/frameImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Bio Text -->
            <TextView
                android:id="@+id/textBio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/SubtitleText"
                android:text="Iâ€™ve been doing gel nails for over 8 years and Iâ€™ve been a tattoo artist for 5 years â€” and I absolutely love what I do.
Whether youâ€™re dreaming of the perfect nails or a unique tattoo that tells your story, Iâ€™m here to make it happen with love, patience, and creativity.
                                                 Come visit me at the studio â€” Iâ€™d love to meet you and create something beautiful together!"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/titleAboutLidar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Contact Info -->
            <TextView
                android:id="@+id/textPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SubtitleText"
                android:text="Phone: +972 50-000-1006"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/textBio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SubtitleText"
                android:text="Address: Banias 7, Netanya"
                android:textColor="@color/primaryColor"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textPhone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Map Buttons Row -->
            <LinearLayout
                android:id="@+id/mapButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/textAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/buttonGoogleMaps"
                    style="@style/PrimaryButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Google Maps" />

                <Button
                    android:id="@+id/buttonWaze"
                    style="@style/PrimaryButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Waze" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- ðŸ”¸ Drawer Navigation -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
