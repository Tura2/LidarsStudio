<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- כפתור סגירה -->
    <ImageButton
        android:id="@+id/btnClose"
        style="@style/CloseIconButton"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- כותרת -->
    <TextView
        android:id="@+id/textChooseTreatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a treatment"
        android:textSize="20sp"
        android:textColor="#191A1A"
        android:fontFamily="@font/heebo_bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- כפתור ג'ל רגיל -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegularGel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Regular Gel"
        style="@style/SecondaryButton"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textChooseTreatment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- כפתור ג'ל אנטומי -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAnatomyGel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gel + Anatomy"
        style="@style/SecondaryButton"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegularGel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- כפתור ג'ל עם ציורים -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPaintedGel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gel + Paintings"
        style="@style/SecondaryButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toBottomOf="@id/btnAnatomyGel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
